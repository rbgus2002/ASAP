<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forbackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/forbackground"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/barcode"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:layout_weight="0"
                android:background="@color/forbackground"
                android:drawableTop="@drawable/barcode"
                android:text="택배 목록 생성하기"
                android:textColor="@color/BBBBlue" />

            <Button
                android:id="@+id/googleMap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@color/forbackground"
                android:drawableTop="@drawable/googlemap"
                android:text="지도에서 확인하기"
                android:textColor="@color/BBBBlue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/orderCheck"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:background="@color/forbackground"
                android:drawableTop="@drawable/sequence"
                android:text="배송 순서 확인하기"
                android:textColor="@color/BBBBlue" />


            <Button
                android:id="@+id/tmap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@color/forbackground"
                android:drawableTop="@drawable/tmaplogo"
                android:text="T map 연동하기"
                android:textColor="@color/BBBBlue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>